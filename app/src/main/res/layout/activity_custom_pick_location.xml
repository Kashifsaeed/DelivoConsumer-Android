<RelativeLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/main_toolbar">

    <com.attribe.delivo.app.utils.CustomMapView
        android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/mymapview"
              class="utils.CustomMapFragment"
                         android:clickable="true"
                android:focusable="false"
    />

    <!--Frame layout of marker-->



</RelativeLayout>
        <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true">


            <ImageView
                    android:id="@+id/static_marker"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_marker"
            />


        </FrameLayout>

    </RelativeLayout>


    <!-- SLIDING LAYOUT -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#ffffff"
            android:orientation="vertical"


           android:id="@+id/dragView"
    android:clickable="true"
    android:focusable="false"


    >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                    android:orientation="vertical">


        <!--<include layout="@layout/sliding_visible_layout"/>-->
            <include layout="@layout/visibile_area_picklocation_layout"/>
            <include layout="@layout/sliding_hidden_layout"/>
        </LinearLayout>

    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
