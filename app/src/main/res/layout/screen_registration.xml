<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:android.support.design.widget.TextInputLayoutandroid="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/signup_heading"
            android:textSize="@dimen/size_heading"
            android:layout_marginLeft="85dp"
            />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="170dp"
                    android:orientation="vertical"

                    >

                <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/left_margin_signup"
                        >

                    <ImageView android:layout_width="@dimen/signup_ic_width"
                               android:layout_height="@dimen/signup_ic_width"
                               android:src="@drawable/ic_user"
                               android:layout_alignParentLeft="true"
                               android:layout_marginTop="@dimen/signup_ic_margin_top"
                            />


                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="false" android:layout_alignParentRight="false"
                            android:layout_marginLeft="50dp">

                        <EditText
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Name"

                                />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/left_margin_signup"
                >

                    <ImageView android:layout_width="@dimen/signup_ic_width"
                               android:layout_height="@dimen/signup_ic_width"
                               android:src="@drawable/ic_user"
                               android:layout_alignParentLeft="true"
                               android:layout_marginTop="@dimen/signup_ic_margin_top"
                    />


                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_fullname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="false"
                            android:layout_alignParentRight="false"
                            android:layout_marginLeft="50dp">

                        <EditText
                                android:id="@+id/fullname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Full Name"

                        />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/left_margin_signup"
                        >

                    <ImageView android:layout_width="@dimen/signup_ic_width"
                               android:layout_height="@dimen/sign_ic_height"
                               android:src="@drawable/ic_email"
                               android:layout_alignParentLeft="true"
                               android:layout_marginTop="@dimen/signup_ic_margin_top"
                            />
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp">

                    <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:inputType="textEmailAddress" />

                </android.support.design.widget.TextInputLayout>

                </RelativeLayout>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/left_margin_signup">
                    <ImageView android:layout_width="@dimen/signup_ic_width"
                               android:layout_height="@dimen/signup_ic_width"
                               android:src="@drawable/ic_phone"
                               android:layout_alignParentLeft="true"
                               android:layout_marginTop="@dimen/signup_ic_margin_top"
                            />
                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            >

                <EditText
                            android:id="@+id/number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="phone"
                            android:inputType="phone"
                            />

                </android.support.design.widget.TextInputLayout>
                </RelativeLayout>




                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="80dp"
                        android:gravity="left"
                        >
                    <Button
                            android:id="@+id/cancel"
                            android:text="@string/cancel"

                            style="@style/Button_Signup_grey"/>
                    <Button
                            android:id="@+id/signup"
                            android:layout_marginLeft="20dp"
                            android:text="Sign up"
                            style="@style/Button_Signup"/>


                </LinearLayout>

            </LinearLayout>

</RelativeLayout>
