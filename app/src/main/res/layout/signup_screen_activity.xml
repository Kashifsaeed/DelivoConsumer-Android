<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
            <!--android:layout_marginLeft="@dimen/normal_margin"-->
            <!--android:layout_marginRight="@dimen/normal_margin"-->
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"



                android:layout_weight="4.5"
                android:background="@drawable/ic_login_img" />
            <!--android:layout_gravity="center"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2"


                    >
                    <!--android:layout_margin="@dimen/normal_margin"-->


                    <EditText
                        android:id="@+id/signup_user_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/small_margin"
                        android:layout_weight="1"
                        android:background="@drawable/input_fields_rounded"
                        android:gravity="center_vertical"
                        android:hint="@string/input_name_hint"
                        android:paddingLeft="@dimen/normal_padding"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"


                        />

                    <com.attribe.delivo.app.utils.CustomEditText
                        android:id="@+id/signup_user_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:layout_weight="1"
                        android:background="@drawable/input_fields_rounded"
                        android:gravity="center_vertical"
                        android:hint="@string/user_contact"
                        android:inputType="number"
                        android:paddingLeft="@dimen/normal_padding"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"


                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_weight="1"
                    android:gravity="center_vertical"


                    >


                    <EditText
                        android:id="@+id/signup_email_address"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:background="@drawable/input_fields_rounded"
                        android:gravity="center_vertical"
                        android:hint="@string/input_email_hint"
                        android:paddingLeft="@dimen/normal_padding"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"


                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_weight="1"
                    android:gravity="center_vertical"


                    >


                    <EditText
                        android:id="@+id/signup_user_password"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:background="@drawable/input_fields_rounded"
                        android:gravity="center_vertical"
                        android:hint="@string/input_password_hint"
                        android:paddingLeft="@dimen/normal_padding"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:inputType="textPassword"


                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_weight="1"
                    android:gravity="center_vertical"


                    >


                    <EditText
                        android:id="@+id/signup_user_confirmpassword"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:background="@drawable/input_fields_rounded"
                        android:gravity="center_vertical"
                        android:hint="@string/account_signup_confirmation_password"
                        android:paddingLeft="@dimen/normal_padding"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:inputType="textPassword"


                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"></LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"

                    android:layout_weight="1"
                    android:background="@drawable/white_border"
                    android:gravity="center_vertical"


                    >


                    <Button
                        android:id="@+id/signup_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/orange_rounded_btn"
                        android:gravity="center"
                        android:paddingLeft="@dimen/normal_padding"
                        android:text="@string/account_signup"
                        android:textColor="@color/white"


                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/dark_purple"
                        android:gravity="center"
                        android:text="@string/already_signin"
                        android:textColor="@color/white"
                        android:id="@+id/already_signUp"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>