<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.attribe.delivo.app.PickAddressActivity">
    <!--Main Layout-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainlayout" android:orientation="vertical"
             >
        <!--android:weightSum="3"-->

        <!--Maps View Here-->

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="450dp"

        android:elevation="5dp">
        <com.google.android.gms.maps.MapView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
        android:id="@+id/mymapview">

            <!--android:layout_weight="2"-->

        </com.google.android.gms.maps.MapView>
            <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true">

                <ImageView
                        android:id="@+id/static_marker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/map_marker"
                />
            </FrameLayout>
        </RelativeLayout>
        <!--Pick Address Area -->
        <!--android:layout_weight="1"-->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="150dp"

                      android:orientation="vertical"
                      android:id="@+id/expandlayout"


                       >
            <!--shown area-->
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/geocodeaddreass_linear"
                          android:orientation="vertical"
                          android:weightSum="2">

                <Button android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                android:id="@+id/confirmPick"
                android:text="Confirm"
                />
                <EditText android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:hint="Pick Location Address"
                          android:id="@+id/pickmyaddress"
                />
                <!--<include layout="@layout/pick_location"/>-->


            </LinearLayout>
            <!--hidden area-->
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/opitonaladdresslayout"
                          android:orientation="vertical"
                          android:visibility="gone"
                       >


                <EditText android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:hint="Pick Location Address"
                          android:id="@+id/pickmyaddress_optional"
                />


            </LinearLayout>






        </LinearLayout>






    </LinearLayout>

</RelativeLayout>
