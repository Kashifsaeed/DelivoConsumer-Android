<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.attribe.delivo.app.ConsumerLogin">

    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Login"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_marginTop="70dp"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp">

                <ImageView android:layout_width="@dimen/signup_ic_width"
                           android:layout_height="@dimen/signup_ic_width"
                           android:src="@drawable/ic_user"
                           android:layout_alignParentLeft="true"
                           android:layout_marginTop="@dimen/signup_ic_margin_top"
                />


                <android.support.design.widget.TextInputLayout
                        android:id="@+id/user_auth_input_layout_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="false" android:layout_alignParentRight="false"
                        android:layout_marginLeft="50dp">

                    <EditText
                            android:id="@+id/user_auth_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name"
                            android:inputType="phone"

                    />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp">

                <ImageView android:layout_width="@dimen/signup_ic_width"
                           android:layout_height="@dimen/signup_ic_width"
                           android:src="@drawable/ic_phone"
                           android:layout_alignParentLeft="true"
                           android:layout_marginTop="@dimen/signup_ic_margin_top"
                />
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/user_auth_input_layout_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                >

                    <EditText
                            android:id="@+id/user_auth_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="phone"
                            android:inputType="phone"
                            android:maxLength="13" />

                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <Button android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log In"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="70dp"/>

            <Button android:id="@+id/signUp_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="40dp"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
