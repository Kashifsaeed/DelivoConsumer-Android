<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/small_margin"
    app:cardCornerRadius="@dimen/medium_margin"
    app:cardBackgroundColor="@color/md_grey_200"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <!--app:cardElevation="@dimen/small_elevation"-->

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/dark_purple"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order #2"
                android:gravity="center"
                android:textSize="@dimen/above_medium_text_size"
                android:textColor="@color/dark_purple"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/normal_margin"
                android:id="@+id/order_id"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/orange_btncolor"
                android:layout_marginLeft="@dimen/large_margin"
                android:layout_marginRight="@dimen/large_margin"
                android:layout_marginTop="@dimen/normal_margin"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malir xyz Street model"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/above_medium_text_size"
                android:drawableLeft="@drawable/ic_marker_pin"
                android:id="@+id/pick_address"
                android:layout_margin="@dimen/medium_margin"
                android:maxLines="2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malir xyz Street model"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/above_medium_text_size"
                android:drawableLeft="@drawable/ic_marker_pin"
                android:layout_margin="@dimen/medium_margin"
                android:id="@+id/drop_address"
                android:maxLines="2"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

