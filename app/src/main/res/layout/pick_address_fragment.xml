<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

        <!--main layout-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_toolbar"
            android:layout_weight="100"
            android:orientation="vertical">


            <com.attribe.delivo.app.utils.CustomMapView
                android:id="@+id/mymapview"
                class="utils.CustomMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:focusable="false"

                />

            <!--pick address area starts here-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/step_icon"
                android:layout_marginLeft="@dimen/large_margin"
                android:layout_marginRight="@dimen/large_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:layout_weight="50"
                android:background="@drawable/input_fields_rounded"
                android:elevation="@dimen/small_margin"
                android:orientation="horizontal"
                android:weightSum="1"


                >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.90">

                    <TextView
                        android:id="@+id/picklocname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="2dp"
                        android:gravity="center_vertical"
                        android:hint="Pick Delivo Location"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:paddingLeft="@dimen/normal_margin"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"

                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="0.1"
                    >
                    <ImageView
                        android:id="@+id/searchPlaces"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_search"
                        android:gravity="center_vertical"
                        />

                    <!--android:padding="2dp"-->


                </RelativeLayout>


            </LinearLayout>
            <!--pick address area ends here-->
            <!--pick add button-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/extra_large_margin"
                android:layout_marginLeft="@dimen/large_margin"
                android:layout_marginRight="@dimen/large_margin">
                <!--android:layout_alignParentBottom="true"-->


                <Button
                    android:id="@+id/confirm_location_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/orange_rounded_btn"
                    android:text="Add Pick Address"
                    android:textColor="@color/white"


                    />
                <!--android:elevation="1dp"-->
            </RelativeLayout>
            <!--centre marker-->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                >

                <ImageView
                    android:id="@+id/static_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/map_marker"


                    />
            </FrameLayout>
        </RelativeLayout>

        <!--</RelativeLayout>-->


    </LinearLayout>
<!--</layout>-->
</layout>
