<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainsignin_layout"
        android:orientation="vertical"
        android:weightSum="10"

        >
        <!--chacha logo area-->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/large_margin"

            android:background="@drawable/main_logo"
            android:layout_weight="3"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/normal_margin"/>
         <!--user name area-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1.25"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"



            >
            <!--android:layout_margin="@dimen/medium_margin"-->

            <View android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:alpha="0.2"/>
            <!--<android.support.design.widget.TextInputLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:textColorHint="@color/white"-->
                <!--android:hint="@string/input_name_hint"-->
                <!--app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"-->


                <!--&gt;-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:id="@+id/loginuser_phone"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:paddingLeft="@dimen/normal_padding"
                    android:textColorHint="@color/white"
                    android:hint="@string/input_phoneno_hint"
                    android:textAppearance="?android:attr/textAppearanceSmall"




                    />
            <!--</android.support.design.widget.TextInputLayout>-->
        </RelativeLayout>

<!-- password area-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1.25"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/normal_margin"



            >

            <View android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:alpha="0.2"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:id="@+id/loginuser_password"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:paddingLeft="@dimen/normal_padding"
                    android:textColorHint="@color/white"
                    android:hint="@string/input_password_hint"
                    android:textAppearance="?android:attr/textAppearanceSmall"





                    />
        </RelativeLayout>

        <!--login buttton area-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1.25"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/normal_margin"


            >
            <!--android:layout_margin="@dimen/medium_margin"-->

            <View android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:alpha="0.2"/>
           <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:id="@+id/login_btn"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="Log In"
                    android:background="@drawable/white_border"

                    />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="Forgot Password?"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/activity_horizontal_margin"/>
        <!--empty area-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginEnd="@dimen/large_margin"

            android:layout_marginStart="@dimen/large_margin">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.4"
                android:background="@color/md_blue_grey_700"
                android:layout_gravity="center"></View>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="Or"
            android:textColor="@color/white"
            android:layout_weight="0.2"
            android:layout_gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.4"
                android:background="@color/md_blue_grey_700"
                android:layout_gravity="center"></View>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1.25"
            android:layout_margin="@dimen/medium_margin"

            >

            <View android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_color"
                android:alpha="0.4"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:id="@+id/facebooklogin_btn"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Sign In With Facebook"
                android:background="@drawable/white_border"

                />

        </RelativeLayout>
        <!--empty space-->
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="0.5"></LinearLayout>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1.5"
            >

            <View android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:alpha="0.3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:id="@+id/accountsignup_btn"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/account_signup_label"

                />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
    </layout>